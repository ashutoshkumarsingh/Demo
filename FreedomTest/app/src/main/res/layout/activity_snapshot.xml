<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="test.freedom.freedomtest.SnapshotApiDemo">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textStyle="bold"
            android:textSize="25sp"
            android:text="User Status>>"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

   <TextView
       android:textSize="20sp"
    android:text="User Status"
    android:id="@+id/user_activity"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

        <TextView
            android:textStyle="bold"
            android:text="Headphone Status>>"
            android:layout_marginTop="20dp"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <TextView
        android:text="Headphone Status"
        android:textSize="20sp"
        android:id="@+id/headphone_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <TextView
            android:textStyle="bold"
            android:text="Location>>"
            android:layout_marginTop="20dp"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="latitude"
            android:textSize="20sp"
            android:id="@+id/lati"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <TextView
            android:textStyle="bold"
            android:textSize="25sp"
android:text="Weather>>"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:text="weather"
            android:textSize="20sp"
            android:id="@+id/weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:text="Possible Address>>"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:padding="20dp"
            android:id="@+id/current_place_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
             />

    </LinearLayout>

</ScrollView>
